import turtle
sonbun = turtle.Turtle()
sonbun.color("red")
sonbun.shape("turtle")
sonbun.speed(0)
sonbun.width(4)

def triangle():
    for x in range(3):
        sonbun.fd(100)
        sonbun.lt(120)
        
def square():
    for x in range(4):
        sonbun.fd(100)
        sonbun.lt(90)
       
def hexagon():
    for x in range(6):
        sonbun.fd(100)
        sonbun.lt(60)
    
def octagon():
    for x in range(8):
        sonbun.fd(100)
        sonbun.lt(180-135)

octagon()

